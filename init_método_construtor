class Restaurante:
   restaurantes = []
   #init - função criada dentro de uma classe que tem o objetivo de criar um método condtrutor
   #Sempre que criarmos  instancia de um objeto, o método construtor será chamado
   #self dentro do init - passado por parâmetro para que as 
   #informações sejam referente ao restaurante que foi passado por parâmetro
   def __init__(self, nome, categoria):
        self.nome = nome
        self.categoria = categoria
        self.ativo = False
        Restaurante.restaurantes.append(self)

   #metodo str - utilizado para retornar as informações do restaurante que se deseja exibir. 
   def __str__(self): 
       return f'{self.nome} | {self.categoria}\n'
   
   def listar_restaurantes():
       #para cada restaurante na lista de restaurantes (Restaurante.restaurantes: -
       #para indicar que a lista vem da classe Restaurante)
       for restaurante in Restaurante.restaurantes:
           print (f'{restaurante.nome}  |   {restaurante.categoria} |   {restaurante.ativo}')

#devido a criação do método construtor, ao passar por parâmetroo restaurante que se deseja
# as informações , faz-se necessário iserir o nome e a categoria dentro dos parentesis
# para que elas seja impressas quando solicitado        
restaurante_praca = Restaurante('Praça', 'Gourmet')
restaurante_pizza = Restaurante('Pizza express', 'Italiana')

Restaurante.listar_restaurantes()

